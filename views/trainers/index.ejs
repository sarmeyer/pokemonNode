<%- contentFor('body') %>

    <div>
        <h1>Showing All Trainers</h1>
        <a class='btn btn-primary' href="/trainers/new">Add a New Trainer</a>
        <% if (locals.trainers) { %>
            <table class='table table-hover'>
                <thead>
                    <th>Id</th>
                    <th>Name</th>
                </thead>
                <tbody>
                    <% for(var i=0; i<trainers.length; i++) { %>
                        <tr>
                            <td>
                                <%= trainers[i].id %>
                            </td>
                            <td>
                                <a href='/trainers/<%= trainers[i].id %>'>
                                    <%= trainers[i].name %>
                                </a>
                            </td>
                            <td>
                                <a class='btn btn-success' href="/trainers/<%= trainers[i].id %>/edit">Edit</a>
                            </td>
                            <td>
                                <a class='btn btn-danger' href="/trainers/<%= trainers[i].id %>/delete">Delete</a>
                            </td>

                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } %>
