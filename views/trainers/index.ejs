<%- contentFor('body') %>
<main class='main'>
  
    <div class='trainer_table'>
        <h1>Showing All Trainers</h1>
        <a class='btn btn-primary' href="/trainers/new">Add a New Trainer</a>
        <% if (locals.trainers) { %>
            <table class='table table-hover'>
                <thead>
                    <th>Id</th>
                    <th>Name</th>
                </thead>
                <tbody>
                    <% for(var i=0; i<trainers.length; i++) { %>
                        <tr>
                            <td>
                                <%= trainers[i].id %>
                            </td>
                            <td>
                                <a href='/trainers/<%= trainers[i].id %>'>
                                    <%= trainers[i].name %>
                                </a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } %>
        </div>
      </main>
